{
  "apps": [{
    "name": "wolt-splitwise-sync",
    "script": "./split.js",
    "interpreter": "node",
    "instances": 1,
    "autorestart": false,
    "watch": false,
    "max_memory_restart": "200M",
    "cron_restart": "0 * * * *",
    "error_file": "./logs/pm2-error.log",
    "out_file": "./logs/pm2-output.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "env": {
      "NODE_ENV": "production"
    }
  }]
}
